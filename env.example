# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here

# Database Configuration
DATABASE_URL=sqlite:///prompt_manager.db
# For PostgreSQL: postgresql://username:password@localhost/dbname

# Application Settings
APP_NAME=Prompt Manager
APP_PORT=5001
APP_HOST=127.0.0.1

# Security
CSRF_ENABLED=True
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Pagination
ITEMS_PER_PAGE=20

# Logging
LOG_LEVEL=DEBUG
LOG_DIR=logs
LOG_FILE=app.log

# OAuth (Google)
# Obtain credentials from Google Cloud Console, set redirect URI to http://localhost:5001/auth/callback for dev
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
OAUTH_GOOGLE_REDIRECT_URI=http://localhost:5001/auth/callback
# Optional: restrict to a Google Workspace domain (e.g., example.com)
OAUTH_GOOGLE_ALLOWED_HD=

# Production-specific settings (uncomment for production)
# ===================================================
# FLASK_ENV=production
# FLASK_DEBUG=False
# SECRET_KEY=<generate-strong-secret-key>
# SESSION_COOKIE_SECURE=True
# SESSION_COOKIE_SAMESITE=Strict
# SQLALCHEMY_ECHO=False
# LOG_LEVEL=INFO

# PostgreSQL Database (production)
# DATABASE_URL=postgresql://user:password@localhost:5432/prompt_manager

# Redis Configuration (optional, for caching and rate limiting)
# REDIS_URL=redis://localhost:6379/0

# Email Configuration (optional, for error notifications)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=true
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password
# ADMINS=admin@example.com,dev@example.com

# Rate Limiting (optional)
# RATELIMIT_ENABLED=true
# RATELIMIT_DEFAULT=200 per day, 50 per hour

# Monitoring (optional)
# PROMETHEUS_ENABLED=true
# PROMETHEUS_PORT=9090

# CORS (optional, for API access from other domains)
# CORS_ORIGINS=https://example.com,https://app.example.com